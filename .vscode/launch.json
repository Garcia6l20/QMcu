{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch (current target)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "cwd": "${command:cmake.getLaunchTargetDirectory}",
      "MIMode": "gdb",
      "environment": [
        { "name": "ASAN_OPTIONS", "value": "abort_on_error=1" },
        {
          "name": "QML_IMPORT_PATH",
          "value": "${command:cmake.buildDirectory}/qml"
        }
      ],
      "args": [
        // "${workspaceFolder}/QMcuWatch/test/CounterExample.qml"
        "${workspaceFolder}/QMcuWatch/test/CounterPlotExample.qml"
        // "${workspaceFolder}/QMcuWatch/test/CounterBuffersExample.qml"
      ],
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
